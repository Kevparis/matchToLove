{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
{# app.user contien l'utilisateur connecter est bien sur les informations de celui-ci #}
<h1 class="text-center text-muted"> Bienvenue <strong class="text-dark">{{app.user.lastname}} {{app.user.firstname}}</strong></h1>
<h5 class="text-center text-muted">Vous etes administrateur</h5>

    <section class="container-fluid">
        <div class="row">
            <div class="col-md-6">
            <h3 class="mx-5">Les Match2Loves</h3>
                <table class="table  mx-5">
                    <thead>
                        <tr>
                            <th scope="col">Photo</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prenom</th>
                            <th scope="col">Email</th>
                            <th scope="col">Date</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
            {% for users in user %}
                    <tbody>                    
                        <tr>
                            <td><div style='width:50px;height:50px;border-radius:50%;background-image:url("{{asset('uploads/images/' ~ users.mainPicture)}}");background-size: cover;background-repeat:no-repeat;background-position:center'></div></td>
                            <td>{{ users.lastname}}</td>
                            <td>{{ users.firstname}}</td>
                            <td>{{ users.email}}</td>
                            <td>{{ users.createdAt | date('d-m-y')}}</td>
                            <td>
                                {# <a class="btn btn-info m-2" href="{{path('app_edit_user',{id: users.id})}}">Modifier</a> |  #}
                                <a class="btn btn-danger m-2" href="{{path('app_remove_user',{id: users.id})}}">Supprimer</a>
                            </td>
                        </tr>
                    </tbody> 
            {% endfor %}
                </table>
            </div>
        </div>
    </section>

{% endblock %}
