{% extends 'base.html.twig' %}

{% block title %}Hello BackofficeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<section class="jumbotron text-center">
		<div class="example-wrapper">
			<h1 class="text-center text-muted">Hello
				{{ app.user.firstname }},
				{{ app.user.lastname }}!✅</h1>
			<h5 class="text-center text-muted">
				You are connected as an administrator
			</h5>
		</div>
	</section>

	<h2>
		Liste des articles
	</h2>
	<hr>

	<section class="container">


		<div class="row">


			<table>
				<tr>
					<th>Id</th>
					<th>Nom</th>
					<th>Prénom</th>
					<th>Email</th>
					<th>Date de publication</th>

					<th></th>
					<th>Actions</th>
				</tr>

				{% for user in allUserBackoffice %}
					<tr>
						<td>{{user.id}}</td>
						<td>{{user.lastname}}</td>
						<td>{{user.firstname}}</td>
						<td>{{user.email}}</td>
						<td>{{user.createdAt | date('d-M-y')}}</td>
						<td>
							<a class="btn btn-danger" href="{{path('app_remove_user',{ id: user.id})}} ">
								Supprimer
							</a>

						</td>
						<td>
							<a class="btn btn-warning" href="{{path('app_edit_user',{ id: user.id})}}">
								modifier
							</a>
						</td>
					</tr>
				{% endfor %}

			</table>

		</div>

	</section>

{% endblock %}
