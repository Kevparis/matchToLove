{% extends 'base.html.twig' %}


{% block title %}Modification de l'utilisateur{% endblock %}

{% block body %}
<section>
<h1 class="text-center text-muted">Modification de {{singleUser.firstname}}</h1>
<div class="col-md-4 mx-auto">
    {{form_start(form)}}
        {{form_row(form.email)}}
        {% if app.user and app.user.email == singleUser.email%}
        {{form_row(form.password)}}
        {% else %}
        {{form_row(form.password,{'attr':{'disabled':'true'}})}}
        {% endif %}
        {{form_row(form.lastname)}}
        {{form_row(form.firstname)}}
        {{form_row(form.pseudo)}}
        {{form_row(form.sex)}}
        {{form_row(form.birthday)}}
        {{form_row(form.adress)}}
        {{form_row(form.size)}}
        {{form_row(form.mainPicture)}} 
        {{form_row(form.levelOfStudies)}}
        {{form_row(form.languages)}}
        {{form_row(form.smoke)}}
        {{form_row(form.nationality)}}
        {{form_row(form.personalityTraits)}}
        {{form_row(form.sport)}}
        {{form_row(form.job)}}
        {{form_row(form.inscription)}}
    {{form_end(form)}}
</div>
</section>
{% endblock %}